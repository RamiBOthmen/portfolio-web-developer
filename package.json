{
  "name": "rami-portfolio",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:css && ng serve",
    "build:css": "postcss src/styles.css -o src/styles.pre.css",
    "build": "npm run build:css && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "@angular/animations": "^21.1.3",
    "@angular/cdk": "^21.1.3",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/material": "^21.1.3",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "aos": "^2.3.4",
    "ng-particles": "^3.12.0",
    "ng-recaptcha-2": "^21.0.0",
    "ngx-typed-js": "^2.1.1",
    "nodemailer": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "tsparticles": "^3.9.1",
    "tsparticles-slim": "^2.12.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/aos": "^3.0.7",
    "@types/node": "^22.0.0",
    "@vercel/node": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.7.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
